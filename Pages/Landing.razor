@page "/"
@using FloodApp.Components.UI
@inject NavigationManager Nav

<div class="landing-page h-screen w-full flex items-center justify-center relative">
    <div class="absolute inset-0 z-0">
        <img src="img/landing-bg.jpg" class="w-full h-full object-cover opacity-30" alt="Background" />
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent"></div>
    </div>
    
    <div class="relative z-10 container flex flex-col items-center gap-8">
        <div class="logo-card p-12 bg-gray-900/80 backdrop-blur-md rounded-2xl border border-gray-700 text-center shadow-2xl max-w-2xl w-full mx-4">
            <h1 class="text-7xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
                SL Flood Risk
            </h1>
            <p class="text-gray-300 text-2xl mb-10">Flood Management System</p>
            
            <AppButton Color="AppButton.ButtonColor.Primary" 
                       Class="w-full text-xl py-4"
                       OnClick="@(() => Nav.NavigateTo("/location"))">
                Get Started
            </AppButton>
        </div>
    </div>
</div>

<style>
    /* Tailwind utilities needed if using raw classes not in app.css, but I defined basics. 
       Adding specific gradient styles here for 'wow' factor. */
    .bg-gradient-to-r { background-image: linear-gradient(to right, var(--tw-gradient-stops)); }
    .from-purple-400 { --tw-gradient-from: #a78bfa; --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(167, 139, 250, 0)); }
    .to-pink-600 { --tw-gradient-to: #db2777; }
    .bg-clip-text { -webkit-background-clip: text; background-clip: text; }
    .text-transparent { color: transparent; }
    
    .backdrop-blur-md { backdrop-filter: blur(12px); }
</style>
