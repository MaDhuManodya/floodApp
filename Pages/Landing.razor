@page "/"
@inject NavigationManager Nav

<div class="splash-container" @onclick="@(() => Nav.NavigateTo("/location"))">
    <div class="content-wrapper">
        <!-- Logo -->
        <div class="logo-box">
            <img src="slic-logo.png" alt="SLIC General" class="splash-logo" />
        </div>
        
        <!-- Text -->
        <h1 class="splash-text">
            Flood Management System
            <span class="suffix">SLIC</span>
        </h1>
        
        <div class="click-hint">Click anywhere to enter</div>
    </div>
    
    <!-- Left corner icon similar to mockup -->
    <div class="corner-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
    </div>
</div>

<style>
    .splash-container {
        height: 100vh;
        width: 100vw;
        background-color: #111827;
        /* Removed background-image to match location page */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        position: relative;
    }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        animation: fadeIn 1s ease-out;
    }

    .logo-box {
        background-color: white;
        padding: 1rem 2rem;
        border-radius: 4px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    }

    .splash-logo {
        max-width: 300px;
        height: auto;
        display: block;
    }

    .splash-text {
        color: white;
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        text-transform: capitalize;
        text-align: center;
    }

    .suffix {
        display: block;
        font-size: 1rem;
        opacity: 0.7;
        margin-top: 0.25rem;
        text-transform: uppercase;
    }

    .click-hint {
        position: absolute;
        bottom: 50px;
        color: rgba(255,255,255,0.3);
        font-size: 0.9rem;
        animation: pulse 2s infinite;
    }

    .corner-icon {
        position: absolute;
        bottom: 30px;
        left: 30px;
        color: rgba(255,255,255,0.5);
    }

    /* Animations directly here to ensure they work even if app.css is cached/missing */
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.6; }
    }
</style>
